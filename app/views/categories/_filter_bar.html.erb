 <p class="block-subtitle block-subtitle--filter">Filter</p>
 <%= form_with url: filter_category_path, role: "form" do |f| %>
  <div class="box-body">
    <div class="form-group">
      <% unless @categories.blank? %>
      <label>Chọn danh mục</label>
      <%= f.select("cat_id", @categories_.collect {|cat| [ cat.name, cat.id ] }, {include_blank: 'Tất cả'}, class: "form-control")
      %>
      <% end %>
    </div>
    <div class="form-group slider-bar">
      <label>Gía</label><br/>
      <b style="margin-left: -20px">$5</b>
      <%= f.text_field :price_range, class: "span2", id: "ex2", "data-slider-min": "10", "data-slider-max": "1000", "data-slider-step": "5", "data-slider-value": "[250,450]", style: "width: 86%" %>
      <b>$1000</b>
    </div>
  </div>
  <div class="box-footer" style="background: #d2d6de !important">
    <!-- <button type="submit" class="btn btn-primary pull-right" style="width: 50%; background-color:#4D566A; border: none; opacity: 0.8">Lọc</button> -->
    <%= f.submit "Lọc", class: "btn btn-primary pull-right", style: "width: 50%; background-color:#4D566A; border: none; opacity: 0.8" %>
  </div>
<% end %>
