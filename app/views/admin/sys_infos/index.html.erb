<%= content_for :title_manage_page do %>
Thông tin chung cho trang web
<% end %>

<div class="box-header with-border">
  <h3 class="box-title">Nội dung chi tiết</h3>
</div>

<div class="box-body" id="sys_info_content">
  <%= render "sys", sys_info: @sys_info %>
</div>

<div class="box-footer clearfix">
  <ul class="pull-right" style="list-style: none; margin-right: 5%">
    <li>
      <a href="#" data-toggle="modal" data-target="#modal-edit-sysinfo" class="btn btn-warning" id="button-edit-sysinfo" sys_id="<%= @sys_info.id %>">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        Sửa đổi
      </a>
    </li>
  </ul>
</div>

<div class="modal fade" id="modal-edit-sysinfo" tabindex="-1" style="padding-right: 15px;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span></button>
          <h4 class="modal-title" >Sửa đổi thông tin cho trang web</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Hotline</label>
            <input type="text" class="form-control" placeholder="Nhập thông tin số hotline" value="<%= @sys_info.hotline %>" id="sys-hotline" required >
          </div>
          <div class="form-group">
            <label>Địa chỉ</label>
            <input type="text" class="form-control" id="sys-address" placeholder="Nhập thông tin địa chỉ phân phối" value="<%= @sys_info.address %>" required >
          </div>
          <div class="form-group">
            <label>Về chúng tôi</label>
            <textarea class="form-control" rows="5" id="sys-about-us" placeholder="Giới thiệu ngắn về trang bán hàng của bạn" required>
              <%= @sys_info.about_us %>
            </textarea>
          </div>
          <div class="form-group">
            <label>Địa chỉ link đến facebook page</label>
            <input type="text" class="form-control" id="sys-facebook-link" placeholder="Nhập link" value="<%= @sys_info.facebook_page_url %>" required>
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" id="sys-email" placeholder="Email liên hệ" value="<%= @sys_info.email %>" required >
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">
            Đóng
          </button>
          <button type="button" class="btn btn-primary confirmed-edit-sysinfo" >
            Lưu thay đổi
          </button>
        </div>
      </div>
    </div>
  </div>
